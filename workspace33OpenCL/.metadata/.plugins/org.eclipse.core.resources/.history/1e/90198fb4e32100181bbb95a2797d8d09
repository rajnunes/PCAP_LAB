__kernel void odd(__global int* A) 
{
	int x = get_global_id(0);
	char data = A[x];
	
	int n = get_global_size(0);
	int pos = 0;
	for(int i=0;i<n;i++)
		if(A[i] < data || A[i] == data && i < x)
			pos++;
	B[pos] = data;
}

__kernel void even(__global int* A) 
{
	int x = get_global_id(0);
	char data = A[x];
	
	int n = get_global_size(0);
	int pos = 0;
	for(int i=0;i<n;i++)
		if(A[i] < data || A[i] == data && i < x)
			pos++;
	B[pos] = data;
}